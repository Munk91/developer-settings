map <up> <nop>
map <down> <nop>
map <left> <nop>
map <right> <nop>
inoremap <up> <nop>
inoremap <down> <nop>
inoremap <left> <nop>
inoremap <right> <nop>

noremap ,w :up<cr>
noremap ,q :q<cr>
noremap ,qa :qa<cr>
nnoremap <C-d> <C-d>zz

set expandtab
set history=1000
set hlsearch
set ignorecase
set incsearch
set nobackup
set nocompatible
set nowrap
set number
set scrolloff=10
set showcmd
set showmatch
set showmode
set smartcase
set tabstop=4
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx
set wildmenu
set wildmode=list:longest


filetype on
filetype plugin on
filetype indent on

syntax on
